#include <stdio.h>

long SumLoop(int n) {
    long sum = 0;
    for (int i = 1; i <= n; ++i) {
        sum += i;
    }
    return sum;
}

long SumRecur(int n) {
    if (n == 0) {
        return 0;
    } else {
        return n + SumRecur(n - 1);
    }
}

int main() {
    printf("SumLoop(n) = %ld\n", SumLoop(10));
    printf("SumRecur(n) = %ld\n", SumRecur(10));
    
    // ทดลองเรียกใช้งานโดยใช้ค่า n ที่มากขึ้น
    printf("SumLoop(100) = %ld\n", SumLoop(100));
    printf("SumRecur(100) = %ld\n", SumRecur(100));
    
    return 0;
}
